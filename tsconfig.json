{
    "ts-node": {
        "esm": true 
   },
    "compilerOptions": {
        "strictNullChecks": true,
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "jsx": "preserve",
        "sourceMap": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "allowJs": true,
        "skipLibCheck": true,
    },
}